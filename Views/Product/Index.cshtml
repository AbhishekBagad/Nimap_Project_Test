@model IEnumerable<Nimap_Project.Models.Product>

@{
    ViewData["Title"] = "Index";
    var pager = ViewBag.Pager;
}
<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-pg="@pge"> @pge </a>
                </li>
            }
        </ul>
    }
</div>

<h1>Product List</h1>
<hr />
<a asp-action="Create"> Create Product</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model=>Model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(Model=>Model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(Model=>Model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(Model=>Model.CategoryName)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => list.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => list.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => list.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => list.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = list.ProductId},new{@class="btn btn-primary"})
                    @Html.ActionLink("Details", "Details", new { id = list.ProductId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "delete", new { id = list.ProductId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
    
</table>
